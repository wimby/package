{
    "name": "wimby/skeleton",
    "description": "Composer package skeleton for Github implementing php-pds/skeleton standard",
    "type": "composer-plugin",
    "license": "MIT",
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/php-pds/skeleton"
        }
    ],
    "extra": {
        "class": [
            "Wimby\\Skeleton\\SkeletonPlugin"
        ]
    },
    "require": {
        "composer-plugin-api": "^1.0",
        "twig/twig": "^2.1"
    },
    "require-dev": {
        "composer/composer": "^1.3",
        "pds/skeleton": "1.*",
        "squizlabs/php_codesniffer": "^2.7"
    },
    "suggest": {
        "phpunit/phpunit": "",
        "phpspec/phpspec": "",
        "phpdocumentor/phpdocumentor": ""
    },
    "autoload": {
        "psr-4": {
            "Wimby\\Skeleton\\": "src/"
        }
    },
    "scripts": {
        "check-style": "vendor/bin/phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src",
        "fix-style": "vendor/bin/phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src"
    }
}
